<div class="alert alert-primary">
    <strong>Id: @ViewBag.id</strong>
    <strong>nombre @ViewBag.Nombre</strong>


</div>

<div class="row mt-3">
    <div class="alert alert-success" role="alert">


        <form class="form">
            <div class="form-group">
                <input id="nombre_empresa" type="text" placeholder="Nombre de la Empresa" required />

                <span></span>
            </div>

            <div class="form-group">
                <label>Anio de inicio </label>
                <input id="anioinicio" type="number"/>
            <span> </span>
          </div>

            <div class="form-group">
                <label>Anio final </label>
                <input id="aniofin" type="number"  />
                <span> </span>
            </div>
          <button  class="btn btn-secondary"id="btn-registro">Registrar</button>
        </form>

</div>


    </div>
    @* importamos jquery *@
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

   <script>
       $(document).ready(function () {
       
       
           $('#btn-registro').click(function (e) { 
           
               e.preventDefault();

               var nombreempresa = $('#nombre_empresa').val();
               var anioinicio = $('#anioinicio').val();
               var aniofinal = $('#aniofin').val();
               var data = {
                Nombreempresa: nombreempresa,
                   Anioinicio: anioinicio,
                   Aniofinal: aniofinal
               };


               $.ajax({
                url: "@Url.Action("RegistroExperienciaLaboral", "ExperienciaLaboral")",
               type:"POST",
               data:data,
                 success: function (data) { 
                   
                       if (data.success) { 
                       console.log("status.CodeOk")
                       
                       }
                   }
               });
           
           });
       
       
       });



   </script>