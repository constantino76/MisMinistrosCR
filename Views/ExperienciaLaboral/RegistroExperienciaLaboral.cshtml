 
@{
    ViewData["Title"] = "RegistroExperienciaLaboral";
}




@section Estilos {
    <link href="https://cdn.datatables.net/2.0.3/css/dataTables.dataTables.css" rel="stylesheet" />
    
    <link href="~/css/site.css" rel="stylesheet"></>

}


 
<div class="row mt-3 justify-content-center bl-2">



    <div class="col-sm-6">


            <div class="card bg-success">
      <div  class="card-header bg-primary">

          <h3 class="card-title"> Registro experiencia laboral</h3>


      </div>

       <div class="card card-body">
              
        <form method="post">
                  
                       <div class="form-group">

                           <label for="nombre_empresa"></label>
                            <input type="text" id="nombre_empresa" name="nombre_empresa" class="form-control" placeholder="Nombre de la empresa" />


                       </div>

                    <div class="form-group">

                        <label for="anio_inicio"></label>
                            <input type="text" id="anio_inicio" name="anio_inicio" class="form-control" placeholder="Anio de inicio" />


                    </div>


                    <div class="form-group">

                        <label for="anio_final"></label>
                        <input type="text" name="anio_final" class="form-control" placeholder="Anio final" />


                    </div>


                        <div class="form-group">
                            <button type="submit" class="btn btn-success mt-3"> Registrar</button>


                        </div>
                 


        </form>
            </div>@*   fin del card body*@
        </div> @* </div> fin del card principal *@

    </div>



</div>

